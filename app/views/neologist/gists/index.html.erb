<h1>Listing gists</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Author</th>
      <th>Private</th>
      <th>Publication state</th>
      <th>Content</th>
      <th>Compiled at</th>
      <th>Stale</th>
      <th>Fetched at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gists.each do |gist| %>
      <tr>
        <td><%= gist.id %></td>
        <td><%= gist.author_id %></td>
        <td><%= gist.public %></td>
        <td><%= gist.publication_state %></td>
        <td><%= gist.content %></td>
        <td><%= gist.compiled_at %></td>
        <td><%= gist.stale %></td>
        <td><%= gist.fetched_at %></td>
        <td><%= link_to 'Show', gist %></td>
        <td><%= link_to 'Edit', edit_gist_path(gist) %></td>
        <td><%= link_to 'Destroy', gist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

